  "type": "commonjs",
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "npx serve -s ./frontend/dist -p ${PORT:-5002} --single",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "npx start-server --port 5001 --static ./frontend/dist",
    "start:backend": "npx start-server --port $PORT --static ./frontend/dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "cd frontend && npm ci"
  },
  "dependencies": {
    "@hexlet/chat-server": "^2.0.4",
    "axios": "^1.13.2",
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "engines": {
    "node": "23.x"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "nodemon": "^3.1.11"
  }
}
